<?xml version="1.0" encoding="utf-8"?>
<appengine-web-app xmlns="http://appengine.google.com/ns/1.0">
    <application>${app.id}</application>
    <version>${app.version}</version>
    <threadsafe>true</threadsafe>
    
    <system-properties>
        <property name="java.util.logging.config.file" value="WEB-INF/logging.properties"/>
    </system-properties>

    <static-files>
        <include path="index.html" />
        <include path="systemjs.config.js" />
        <include path="img/**" />

        <include path="node_modules/@angular/*/bundles/*.js" />
        <include path="node_modules/@angular/router/**.js" />
        <include path="node_modules/systemjs/dist/system-polyfills.js" />
        <include path="node_modules/systemjs/dist/system-polyfills.js.map" />
        <include path="node_modules/systemjs/dist/system.src.js" />
        <include path="node_modules/core-js/client/shim.min.js" />
        <include path="node_modules/zone.js/dist/zone.js" />
        <include path="node_modules/reflect-metadata/Reflect.js" />
        <include path="node_modules/rxjs/**.js*" />
        <include path="node_modules/core-js/client/shim.min.js.map" />
        <include path="node_modules/reflect-metadata/Reflect.js.map" />

        <include path="node_modules/moment/min/moment.min.js" />
        <include path="node_modules/normalize.css/normalize.css" />
        <include path="node_modules/materialize-css/dist/fonts/roboto/*.woff2" />
        <include path="node_modules/materialize-css/dist/css/materialize.min.css" />
        <include path="node_modules/materialize-css/dist/js/materialize.min.js" />

        <include path="app/*.js" />
        <include path="app/*.map" />
        <include path="app/*.html" />
        <include path="app/*.css" />
    </static-files>

    <resource-files>
        <include path="index.html" />
        <include path="systemjs.config.js" />
        <include path="img/**" />

        <include path="node_modules/@angular/*/bundles/*.js" />
        <include path="node_modules/@angular/router/**.js" />
        <include path="node_modules/systemjs/dist/system-polyfills.js" />
        <include path="node_modules/systemjs/dist/system-polyfills.js.map" />
        <include path="node_modules/systemjs/dist/system.src.js" />
        <include path="node_modules/zone.js/dist/zone.js" />
        <include path="node_modules/core-js/client/shim.min.js" />
        <include path="node_modules/reflect-metadata/Reflect.js" />
        <include path="node_modules/rxjs/**.js*" />
        <include path="node_modules/core-js/client/shim.min.js.map" />
        <include path="node_modules/reflect-metadata/Reflect.js.map" />

        <include path="node_modules/moment/min/moment.min.js" />
        <include path="node_modules/normalize.css/normalize.css" />
        <include path="node_modules/materialize-css/dist/fonts/roboto/*.woff2" />
        <include path="node_modules/materialize-css/dist/css/materialize.min.css" />
        <include path="node_modules/materialize-css/dist/js/materialize.min.js" />

        <include path="app/*.js" />
        <include path="app/*.map" />
        <include path="app/*.html" />
        <include path="app/*.css" />
        <exclude path="**" />
    </resource-files>
</appengine-web-app>
