<?xml version="1.0" encoding="utf-8"?>
<appengine-web-app xmlns="http://appengine.google.com/ns/1.0">
    <application>${app.id}</application>
    <version>${app.version}</version>
    <threadsafe>true</threadsafe>
    
    <system-properties>
        <property name="java.util.logging.config.file" value="WEB-INF/logging.properties"/>
    </system-properties>

    <static-files>
        <include path="index.css" />
        <include path="index.html" />
        <include path="config.js" />
        <include path="img/*" />

        <include path="node_modules/angular2/bundles/angular2-polyfills.js" />
        <include path="node_modules/systemjs/dist/system-polyfills.js" />
        <include path="node_modules/systemjs/dist/system.src.js" />
        <include path="node_modules/rxjs/bundles/Rx.js" />
        <include path="node_modules/angular2/bundles/angular2.dev.js" />
        <include path="node_modules/es6-shim/es6-shim.min.js" />
        <include path="node_modules/angular2/bundles/http.js" />
        <include path="node_modules/angular2/bundles/router.dev.js" />

        <include path="node_modules/masonry-layout/dist/masonry.pkgd.min.js" />
        <include path="node_modules/moment/moment.js" />
        <include path="node_modules/normalize.css/normalize.css" />
        <include path="node_modules/materialize-css/dist/font/roboto/*.woff2" />
        <include path="node_modules/materialize-css/dist/css/materialize.min.css" />
        <include path="node_modules/materialize-css/dist/js/materialize.min.js" />

        <include path="app/*.js" />
        <include path="app/*.html" />
        <include path="app/*.css" />
    </static-files>

    <resource-files>
        <include path="index.css" />
        <include path="index.html" />
        <include path="config.js" />
        <include path="img/*" />

        <include path="node_modules/angular2/bundles/angular2-polyfills.js" />
        <include path="node_modules/systemjs/dist/system-polyfills.js" />
        <include path="node_modules/systemjs/dist/system.src.js" />
        <include path="node_modules/rxjs/bundles/Rx.js" />
        <include path="node_modules/angular2/bundles/angular2.dev.js" />
        <include path="node_modules/es6-shim/es6-shim.min.js" />
        <include path="node_modules/angular2/bundles/http.js" />
        <include path="node_modules/angular2/bundles/router.dev.js" />

        <include path="node_modules/masonry-layout/dist/masonry.pkgd.min.js" />
        <include path="node_modules/moment/moment.js" />
        <include path="node_modules/normalize.css/normalize.css" />
        <include path="node_modules/materialize-css/dist/font/roboto/*.woff2" />
        <include path="node_modules/materialize-css/dist/css/materialize.min.css" />
        <include path="node_modules/materialize-css/dist/js/materialize.min.js" />

        <include path="app/*.js" />
        <include path="app/*.html" />
        <include path="app/*.css" />
        <exclude path="**" />
    </resource-files>
</appengine-web-app>
